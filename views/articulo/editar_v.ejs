<%- include('../header') %>

<%- include('../categoria/contentWrapper_header') %>
<% if( resul ) { %>
  <div class="panel-body" id="formularioregistro" style="height: 400px;">    
    <form action="/articulo/update" name="formulario" id="formulario" method="POST" enctype="multipart/form-data">      
      <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <label>Nombre(*):</label>
        <input value="<%= resul.idarticulo %>" type="hidden" name="idarticulo" id="idarticulo">
        <input value="<%= resul.nombre %>" type="text" class="form-control" name="nombre" id="nombre" maxlength="100" placeholder="Nombre" required>
      </div>

      <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <label>Categoría(*):</label>
        <select id="idcategoria" name="idcategoria" class="form-control selectpicker" data-live-search="true" required>          
          <% option.forEach(function(datax) { %>
          <option value="<%= datax.idcategoria %>"> <%= datax.nombre %> </option>
          <% }); %>
        </select>
      </div>

      <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <label>Stock(*):</label>
        <input value="<%= resul.stock %>" type="number" class="form-control" name="stock" id="stock" required>
      </div>

      <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <label>Descripción:</label>
        <input value="<%= resul.descripcion %>" type="text" class="form-control" name="descripcion" id="descripcion" maxlength="256" placeholder="Descripción">
      </div>

      <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <label>Imagen:</label>
        <input value="<%= resul.imagen %>" type="file" class="form-control" name="imagen" id="imagen">       
        <img src="/articulos/<%= resul.imagen %>" class="img-thumbnail"  width="250px" height="220px" id="imagenmuestra"> 
      </div>
      
      <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <label>Código:</label>
        <input value="<%= resul.codigo %>" type="text" class="form-control" name="codigo" id="codigo" placeholder="Código Barras">
        <button class="btn btn-success" type="button">Generar</button>
        <button class="btn btn-info" type="button" >Imprimir</button>
        
        <div id="print"><!--Va a imprimir todo lo que contenga el DIV-->
          <svg id="barcode"></svg>
        </div>
      </div>

      <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <button class="btn btn-primary" type="submit" id="btnGuardar">
          <i class="fa fa-save"></i> Guardar                            
        </button>
        <a href="/articulo" type="button" class="btn btn-danger"><i class="fa fa-arrow-circle-left"> Cancelar </i></a>
      </div>
    </form>
  </div>
<% } %>  

<%- include('../categoria/contentWrapper_footer') %>
<%- include('../footer') %>



