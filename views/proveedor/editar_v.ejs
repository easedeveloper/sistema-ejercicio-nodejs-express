<%- include('../header') %>

<%- include('../categoria/contentWrapper_header') %>
  <% if( resul ) { %>
    <div class="panel-body" style="height: 400px;" id="formularioregistros">
      <form action="/proveedor/update" name="formulario" id="formulario" method="POST">
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
  
          <label>Nombre:</label>
          <input value="<%= resul.idpersona %>" type="hidden" name="idpersona" id="idpersona">
          <input type="hidden" name="tipo_persona" id="tipo_persona" value="Proveedor">
          <input value="<%= resul.nombre %>" type="text" class="form-control" name="nombre" id="nombre" maxlength="100" placeholder="Nombre del proveedor" required>
        </div>
  
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <label>Tipo Documento:</label>
          <select class="form-control select-picker" name="tipo_documento" id="tipo_documento" required>
            <option value="DNI">DNI</option>
            <option value="RUC">RUC</option>
            <option value="CEDULA">CEDULA</option>
          </select>
        </div>
  
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <label>Número Documento:</label>
          <input value="<%= resul.num_documento %>" type="text" class="form-control" name="num_documento" id="num_documento" maxlength="20" placeholder="Documento">
        </div>
  
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <label>Dirección:</label>
          <input value="<%= resul.direccion %>" type="text" class="form-control" name="direccion" id="direccion" maxlength="70" placeholder="Dirección">
        </div>
  
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <label>Teléfono:</label>
          <input value="<%= resul.telefono %>" type="text" class="form-control" name="telefono" id="telefono" maxlength="20" placeholder="Teléfono">
        </div>
        
        <div class="form-group col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <label>Email:</label>
          <input value="<%= resul.email %>" type="email" class="form-control" name="email" id="email" maxlength="50" placeholder="Email">
        </div>
  
        <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <button class="btn btn-primary" type="submit" id="btnGuardar"><i class="fa fa-save"></i> Guardar</button>
          <a href="/proveedor" class="btn btn-danger" type="button"><i class="fa fa-arrow-circle-left"></i> Cancelar</a>
        </div>
      </form>
  </div>
  <% } %>

<%- include('../categoria/contentWrapper_footer') %>
<%- include('../footer') %>